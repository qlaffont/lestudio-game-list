{
  "name": "lestudio-game-list",
  "description": "Able to update your twitch category Id by on your processes",
  "version": "1.0.0",
  "private": true,
  "author": {
    "email": "contact@qlaffont.com",
    "name": "Quentin Laffont",
    "url": "https://qlaffont.com"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "vite build --config ./packages/renderer/vite.config.js",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
    "test:e2e": "pnpm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "dev": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "pnpm dlx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue}\""
  },
  "devDependencies": {
    "@types/node": "18.11.13",
    "@types/ps-node": "^0.1.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-vue": "4.0.0",
    "@vue/test-utils": "2.2.6",
    "@windicss/plugin-animations": "^1.0.9",
    "autoprefixer": "^10.4.13",
    "cross-env": "7.0.3",
    "electron": "22.0.0",
    "electron-builder": "23.6.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "9.8.0",
    "happy-dom": "8.1.0",
    "nano-staged": "0.8.0",
    "playwright": "1.27.1",
    "postcss": "^8.4.20",
    "prettier": "^2.8.1",
    "sass": "^1.56.2",
    "simple-git-hooks": "2.8.1",
    "typescript": "4.9.4",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.0.4",
    "vite-plugin-windicss": "^1.8.10",
    "vitest": "0.27.1",
    "vue-tsc": "1.0.13",
    "windicss": "^3.5.6"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^3.0.0",
    "ajv": "^8.12.0",
    "clsx": "^1.2.1",
    "connected-domain": "^1.0.0",
    "debounce-promise": "^3.1.2",
    "electron-store": "^8.1.0",
    "electron-updater": "5.3.0",
    "lodash.uniqby": "^4.7.0",
    "neat-csv": "^7.0.0",
    "ps-node": "^0.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
    "react-select": "^5.7.0",
    "table-parser": "^1.0.1",
    "tasklist": "^4.0.1",
    "usehooks-ts": "^2.9.1",
    "vue": "3.2.45"
  }
}
